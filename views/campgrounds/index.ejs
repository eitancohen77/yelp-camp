<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new" class="btn btn-info">Create a new Campground</a>
    <% for (let campground of campgrounds) { %>
        <div class="col-8 ">
            <div class="card" mb-3>
                <div class="col-8 offset-2"></div>
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%=campground.image%>" alt="">
                    </div>
                    <div class="col-md-4">
                        <div class="card-body">
                            <h5 class="card-title"><%=campground.title%></h5>
                            <p class="card-text"> <%= campground.title %></p>
                            <p class="card-text">
                                <small class="text-muted"> <%= campground.location %></small>
                            </p>
                            <a class="btn btn-primary" href="/campgrounds/<%=campground.id%>"><%= campground.title %></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>